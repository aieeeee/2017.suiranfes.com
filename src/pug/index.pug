- var page = { id :"index" };

doctype
html(lang="ja")
  head
    include includes/_script.pug
    include includes/_meta.pug
  body
    include includes/_nav.pug
    .wrap.-index-first
      .row.-index-second
        .col-md-6.col-xl-7
          .row
            .col-xl-8.py-3.-index-left.text-font-mpc
              .container
                h1.-index-title #{site.title}
                span.-index-theme #{site.theme}
                br
                span.-index-themeinjap  『#{site.themeinjap}』
                p.-index-date
                  span.-index-date-y 2017年
                  span.-index-date-m 6月
                  span.-index-date-day1num 3日
                  span.-index-date-day1Sat (土)
                  br
                  span.-index-date-day2num 4日
                  span.-index-date-day2Sun (日)
            .col-xl-4.py-4
              .-index-mediun
                .list-group
                  .list-group-item
                    h3.my-1 更新情報
                  mixin updatearticle
                    article(itemscope, itemtype="http://schema.org/NewsArticle").w-100.flex-column.align-items-start
                      .d-flex.w-100.justify-content-between
                        small
                          time(itemprop="datePublished", datetime=site.updates[i].date, content=site.updates[i].date)
                            | #{printableDate}
                        .badge.badge-pill(class=badgeType,itemprop="keywords")
                          | #{site.updatebadges[site.updates[i].badge].title}
                      h5(itemprop="headline").my-1
                        | #{site.updates[i].title}
                      p(itemprop="articleBody")
                        | #{site.updates[i].description}
                      meta(itemprop="author", content="群馬県立高崎高等学校 第65回翠巒祭実行委員会")
                      meta(itemprop="publisher", itemtype="Organization", itemscope)
                      meta(itemprop="name", content="群馬県立高崎高等学校 第65回翠巒祭実行委員会")
                      meta(itemprop="image", content=`${site.URL}${site.sitecardpath}`)
                      
                  - for( var i in site.updates ) {
                  -   var printableDate = printDate(site.updates[i].date)
                  -   var badgeType = "badge-" + site.updatebadges[site.updates[i].badge].style
                  -   if( i == 0 ){
                    if site.updates[i].link
                      a(href=site.updates[i].link).list-group-item.list-group-item-action.active
                        +updatearticle
                    else
                      .list-group-item.active
                        +updatearticle
                  -   } else {
                    if site.updates[i].link
                      a(href=site.updates[i].link).list-group-item.list-group-item-action
                        +updatearticle
                    else
                      .list-group-item
                        +updatearticle
                  -   }
                  - }
        .col-md-6.col-xl-5
          .-index-right
            a(href="attention.html").Attention
              .-index-pickups-wrap.Attention
                .container
                  .-index-pickups.Attention
                    .-index-pickups-head ご注意
                    .-index-pickups-desc ご来場前に必ず知っていただきたいこと
            a(href="access.html#shuttle").Bus
              .-index-pickups-wrap.Bus
                .container
                  .-index-pickups.Bus
                    .-index-pickups-head 無料シャトルバス
                    .-index-pickups-desc 高崎駅から約10分毎に運行。詳細をご確認ください
            a(href="pantene.html").Pantene
              .-index-pickups-wrap.Pantene
                .container
                  .-index-pickups.Pantene
                    .-index-pickups-head 一般展示
                    .-index-pickups-desc 今回最も力を入れた校内の展示です
            a(href="food.html").Food
              .-index-pickups-wrap.Food
                .container
                  .-index-pickups.Food
                    .-index-pickups-head 模擬店･食堂･喫茶
                    .-index-pickups-desc 各種食べ物、飲み物
    include includes/_footer.pug