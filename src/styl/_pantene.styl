.-pantene-index-columns
  @media screen and (max-width: 1366px)
    overflow-x: scroll

  .-pantene-floor
    display: flex
    flex-wrap: wrap
    align-items: stretch
    @media screen and (max-width: 1366px)
      width: 1366px

    .-pantene-room
      display: block
      flex: 0 0 calc( 100% / 9 )
      width: calc( 100% / 9 )
      word-wrap: break-word
      word-break: break-all

      .card
        width: 100%
        height: 100%

      a.card
        color: rgba(230,230,255,.85)

      div.card
        color: rgba(255,255,255,.85)