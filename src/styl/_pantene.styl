.-pantene-index-columns
  background-color: #e1f5fe
  @extend .bgimg-s
  @media screen and (max-width: 1366px)
    overflow-x: scroll

  h3
    position: sticky
    left: 0

  .-pantene-floor
    display: flex
    flex-wrap: wrap
    align-items: stretch
    @media screen and (max-width: 1366px)
      width: 1366px

    .-pantene-room
      display: block
      flex: 0 0 calc( (100% - 110px) / 9 )
      width: calc( (100% - 110px) / 9 )
      word-wrap: break-word
      word-break: break-all

      .card
        width: 100%
        height: 100%

        .-pantene-hosts
          position: sticky
          bottom: 0

      a.card
        color: rgba(255,255,255,1)

      div.card
        color: rgba(255,255,255,.85)

    .-pantene-stairs
      display: block
      flex: 0 0 54px
      width: 54px
      word-wrap: break-word
      word-break: break-all

      .card
        width: 100%
        height: 100%
        text-align: center
        vertical-align: middle
        color: rgba(255,255,255,.85)
